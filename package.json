{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/benchmark",
    "version": "0.0.1",
    "type": "module",
    "description": "Simple benchmarking tool for command-line (Node.js) and Web",
    "keywords": [
        "benchmark",
        "node.js",
        "browser",
        "cli",
        "console"
    ],
    "license": "MIT",
    "author": "Klaus Reimer <k@ailis.de>",
    "repository": "github:kayahr/benchmark",
    "homepage": "https://github.com/kayahr/benchmark",
    "bugs": "https://github.com/kayahr/benchmark/issues",
    "funding": "https://github.com/kayahr/benchmark?sponsor=1",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/main/",
        "src/main/"
    ],
    "exports": "./lib/main/index.js",
    "scripts": {
        "clean": "rimraf lib",
        "build": "run-s build:*",
        "build:compile": "tsc",
        "test": "run-s test:*",
        "test:unit": "vitest run",
        "test:lint": "eslint --max-warnings 0",
        "test:apidoc": "typedoc --emit none",
        "test:spell": "cspell --no-progress --no-summary",
        "apidoc": "typedoc",
        "install:browser": "playwright install chromium",
        "prepare": "run-s install:browser clean build"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "3.5.0",
        "@kayahr/vitest-matchers": "1.2.0",
        "@types/node": "22.15.19",
        "@vitest/browser": "3.1.2",
        "@vitest/coverage-istanbul": "3.1.4",
        "cspell": "9.0.1",
        "npm-run-all": "4.1.5",
        "playwright": "1.52.0",
        "rimraf": "6.0.1",
        "source-map-support": "0.5.21",
        "typedoc": "0.28.4",
        "typescript": "5.8.3",
        "vitest": "3.1.2"
    },
    "dependencies": {
        "esbuild": "^0.25.4"
    }
}
